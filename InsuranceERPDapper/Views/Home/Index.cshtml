@model IEnumerable<InsuranceERPDapper.Models.Insurance>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="alert alert-success" role="alert">@ViewBag.Message</p>
    }

    @if (string.IsNullOrEmpty(ViewBag.Error))
    {
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PolicyNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.Premium)</th>
                <th>@Html.DisplayNameFor(model => model.HolderName)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Comment)</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PolicyNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.Premium)</td>
                    <td>@Html.DisplayFor(modelItem => item.HolderName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p class="alert alert-danger" role="alert">@ViewBag.Error</p>
    }
</div>
